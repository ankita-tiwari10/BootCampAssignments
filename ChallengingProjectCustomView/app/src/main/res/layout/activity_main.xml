<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">


   <FrameLayout
       android:id="@+id/My_Container_1_ID"
       android:layout_width="@dimen/room_width"
       android:layout_height="@dimen/room_height"
       android:background="@color/blue"
       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/bedroom"
          android:textStyle="bold"
          android:textAlignment="center"
          />
   </FrameLayout>

   <FrameLayout
       android:id="@+id/My_Container_2_ID"
       android:layout_width="@dimen/room_width"
       android:layout_height="@dimen/room_height1"
       android:background="@color/green"
       android:layout_below="@+id/My_Container_1_ID"
       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/storeroom"
          android:textStyle="bold"
        android:textAlignment="center"
          android:layout_gravity="center"/>
   </FrameLayout>

   <FrameLayout
       android:id="@+id/My_Container_3_ID"
       android:layout_width="@dimen/room_width"
       android:layout_height="@dimen/room_width"
       android:background="@color/yellow"
       android:layout_toRightOf="@+id/My_Container_1_ID">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/kitchen"
          android:textStyle="bold"
          android:textAlignment="center"
          android:layout_gravity="center"/>
   </FrameLayout>
   <FrameLayout
       android:id="@+id/My_Container_4_ID"
       android:layout_width="@dimen/room_width"
       android:layout_height="@dimen/room_width"
       android:background="@color/colorPrimary"
       android:layout_below="@id/My_Container_3_ID"
       android:layout_toRightOf="@+id/My_Container_2_ID">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/hall"
          android:textStyle="bold"
          android:textAlignment="center"
          android:layout_gravity="bottom"/>
   </FrameLayout>
   <LinearLayout
       android:layout_width="@dimen/room_width"
       android:layout_height="wrap_content"
       android:layout_below="@+id/My_Container_4_ID"
       android:layout_toRightOf="@id/My_Container_2_ID"
       android:background="@drawable/spinnerbackground"
       android:gravity="center">
      <FrameLayout
          android:layout_width="15dp"
          android:layout_height="@dimen/room_height2"
          android:background="@color/colorPrimary"
          android:id="@+id/frag"></FrameLayout>
      <FrameLayout
          android:layout_width="15dp"
          android:layout_height="@dimen/room_height2"
          android:background="@color/colorPrimary"
          android:layout_toRightOf="@+id/frag"
          android:layout_marginLeft="20dp"></FrameLayout>
   </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/My_Container_2_ID"
    android:background="@drawable/simple_circle"
    android:paddingTop="7dp"
    android:id="@+id/lin"
    android:orientation="horizontal">

</LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
android:layout_toRightOf="@+id/lin"
       android:layout_below="@id/My_Container_2_ID"
       android:paddingLeft="20dp"
       android:paddingTop="20dp"
       android:gravity="center">
<TextView
    android:layout_width="@dimen/room_height1"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:background="@drawable/spinnerbackground"
    android:id="@+id/tv_pet"/>
   </LinearLayout>
</RelativeLayout>